<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--I'd like to make this the default, but it interacts negatively with the other components-->
    <Style x:Key="DefTextBlock" TargetType="TextBlock">

        <Style.Setters>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Background" Value="#FF272121"/>
            <Setter Property="Foreground">
                <Setter.Value>
                    <SolidColorBrush Color="White" Opacity="0.67"/>
                </Setter.Value>
            </Setter>
            <Setter Property="FontSize" Value="18"/>
        </Style.Setters>
        
    </Style>
    
</ResourceDictionary>